<h1>Esqueceu sua senha?</h1>

<%= simple_form_for(resource, :html => { :class => 'form-horizontal', :method => :post }, :as => resource_name, :url => password_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mande-me instruções para resetar minha senha" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
