<h1>Entrar</h1>

<%= simple_form_for(resource, :html => { :class => 'form-horizontal' }, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :label => "Lembrar-me" , :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar" %>
    <%= link_to image_tag('facebook_64.png'), user_omniauth_authorize_path(:facebook), :style => 'margin-left:40%;' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
