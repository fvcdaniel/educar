<%- model_class = Assunto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @assunto.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:materia_id) %>:</strong></dt>
  <dd><%= @assunto.materia_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assunto_id) %>:</strong></dt>
  <dd><%= @assunto.assunto_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              assuntos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assunto_path(@assunto), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assunto_path(@assunto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?')) },
              :class => 'btn' %>
</div>
