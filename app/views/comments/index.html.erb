<%- model_class = Comment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:texto) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.id, comment_path(comment)  %></td>
        <td><%= comment.texto  %></td>
        <td>
              <%= link_to image_tag('edit.png'), edit_comment_path(comment), :class => 'quick-edit',
                      :title => 'editar' %>
              <%= link_to image_tag('delete.png'), comment_path(comment), :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
                          :default => 'VocÃª tem certeza?')) },
                          :class => '', :title => 'deletar' %>
            </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_comment_path,
            :class => 'btn' %>