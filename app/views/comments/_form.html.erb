<%= simple_form_for(@comment, :html => { :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :texto, :as => :text, :input_html => {:cols => 60, :rows => 8} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
