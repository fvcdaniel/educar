<h1>Listando materias</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Imagem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @materias.each do |materia| %>
  <tr>
    <td><%= materia.nome %></td>
    <td><%= materia.imagem %></td>
    <td><%= link_to 'Visualizar', materia %></td>
    <td><%= link_to 'Editar', edit_materia_path(materia) %></td>
    <td><%= link_to 'Deletar', materia, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Cadastrar Materia', new_materia_path %>
