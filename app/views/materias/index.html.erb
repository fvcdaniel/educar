<%- model_class = Materia -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>

</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:imagem) %></th>
      <th><%=t '.actions', :default => 'Ações' %></th>
    </tr>
  </thead>
  <tbody>
    <% @materias.each do |materia| %>
      <tr>
        <td><%= materia.nome %></td>
        <td><%= materia.imagem %></td>
        <td>
          <%= link_to image_tag('edit.png'), edit_materia_path(materia), :class => 'quick-edit',:title => 'editar' %>
          <%= link_to image_tag('delete.png'), materia_path(materia), :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", 
                      :default => 'Você tem certeza?')) },
                      :class => '', :title => 'deletar' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
            new_materia_path,
            :class => 'btn' %>
</div>
