<%= simple_form_for @concurso, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= f.input :ano, :collection => 2000..(Date.today.year+1), :selected => Date.today.year %>
  <%= f.input :cargo %>
  <%= f.input :edital %>
  <%= f.input :gabarito %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                concursos_path, :class => 'btn' %>
  </div>
<% end %>
