<%- model_class = Questao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => 1) %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:materia_id) %>:</strong></dt>
  <dd><%= @questao.materia.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:concurso_id) %>:</strong></dt>
  <dd><%= @questao.concurso.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assunto_id) %>:</strong></dt>
  <dd><%= @questao.assunto.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:texto) %>:</strong></dt>
  <dd><%= @questao.texto %></dd>
</dl>

<dl class="dl-horizontal">
  <% @questao.itens.each.with_index do |item, index| %>
    <dt><strong>Item <%= index+1 %>:</strong></dt>
    <dd><%= (link_to item.desc, item_path(item)) %></dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              questoes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_questao_path(@questao), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              questao_path(@questao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?')) },
              :class => 'btn' %>
</div>
