

<%= simple_form_for @questao, :html => { :class => 'form-horizontal' } do |f| %>
  <%= tinymce_assets %>
  <%= tinymce %>
  <%= f.error_notification %>
  
  <div class="form-inputs">
	  <%= f.association :concurso, :input_html => { :style => "width: auto" } %>
    <%= f.association :materia, :input_html => { :style => "width: auto" } %>

    <% if @questao.materia.blank? %>
      <%= f.association :assunto, :collection => [] %>
    <% else %>
      <%= f.association :assunto, :collection => @questao.materia.assuntos.sort {|a,b| a.name_with_parent <=> b.name_with_parent}.collect{|a| [a.name_with_parent, a.id]}, :input_html => { :style => "width: auto" } %>
    <% end %>

    <%= f.input :tipo, :collection => [['MÃºltipla Escolha', 'M'], ['Certa / Errada', 'C']], :include_blank => false %>
	  
    <%= f.input :gabarito, :collection => ['A', 'B', 'C', 'D', 'E'], :as => :select, :input_html => { :style => "width: auto" }, :disabled => false %>

	  <%= f.input :texto, :as => :text, :input_html => {:rows => 8, :cols => 80, :class => 'tinymce' }, :hint => 'coloque aqui a pergunta...' %>
    
    <%= f.input :itema, :label => 'Item A', :as => :text, :input_html => {:rows => 4, :cols => 80 }, :hint => 'coloque aqui o item A...' %>
    <%= f.input :itemb, :label => 'Item B', :as => :text, :input_html => {:rows => 4, :cols => 80 }, :hint => 'coloque aqui o item B...' %>
    <%= f.input :itemc, :label => 'Item C', :as => :text, :input_html => {:rows => 4, :cols => 80 }, :hint => 'coloque aqui o item C...' %>
    <%= f.input :itemd, :label => 'Item D', :as => :text, :input_html => {:rows => 4, :cols => 80 }, :hint => 'coloque aqui o item D...' %>
    <%= f.input :iteme, :label => 'Item E', :as => :text, :input_html => {:rows => 4, :cols => 80 }, :hint => 'coloque aqui o item E...' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questoes_path, :class => 'btn' %>
  </div>
<% end %>


