<%- model_class = Questao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => 2) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:materia_id) %></th>
      <th><%= model_class.human_attribute_name(:concurso_id) %></th>
      <th><%= model_class.human_attribute_name(:texto) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @questoes.each do |questao| %>
      <tr>
        <td><%= link_to questao.id, questao_path(questao) %></td>
        <td><%= questao.materia_id %></td>
        <td><%= questao.concurso_id %></td>
        <td><%= questao.texto %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_questao_path(questao), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      questao_path(questao),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_questao_path,
            :class => 'btn' %>
